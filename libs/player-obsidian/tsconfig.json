{
  "extends": "@waveform/inf/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2021"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["obsidian-typings"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}